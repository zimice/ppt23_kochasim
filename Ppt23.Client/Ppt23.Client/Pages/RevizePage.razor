@page "/revize"
@page "/revize/{param}"
@using Ppt.Shared;
@inject HttpClient Http


<h3 class="text-green-400">@param </h3>
<input class="border-2 border-blue-700" @bind-value="oninput"/>

<button class="p-2 pl-5 pr-5 bg-blue-500 text-gray-100 text-lg rounded-lg focus:border-4 border-blue-300" @onclick="">
	Vyhledej
</button>
<p>
@output
</p>

@code {
	string? oninput;
	string? output;
	[Parameter] public  string param { get; set; }

	List<RevizeViewModel> list;

	public override async Task hledej()
	{
		list = await Http.GetFromJsonAsync<List<Ppt.Shared.RevizeViewModel>>("revize");

	}


}
